  <div id="count">0</div>

  <button onclick="increaseCount()">زيادة</button>
  <button id="reset" onclick="resetCount()">إعادة ضبط</button>

  <div class="ayah">﴿ أَلَا بِذِكْرِ ٱللَّهِ تَطْمَئِنُّ ٱلْقُلُوبُ ﴾</div>
  <div class="palestine">لا تنسوا الدعاء لإخواننا في فلسطين</div>

  <script>
    let counter = 0;

    function increaseCount() {
      counter++;
      document.getElementById('count').textContent = counter;
    }

    function resetCount() {
      counter = 0;
      document.getElementById('count').textContent = counter;
    }
  </script>

